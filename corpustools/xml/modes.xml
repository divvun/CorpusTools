<modes>
  <!-- More info on this file type: http://wiki.apertium.org/wiki/Modes -->
  <!-- Filenames are relative to the language directory  -->
  <mode name="xfst">
    <pipeline>
      <program name="preprocess" debug="preprocess">
        <arg name="--abbr"/>
        <file name="tools/tokenisers/abbr.txt"/>
      </program>
      <program name="lookup" debug="xlookup">
        <arg name="-q"/>
        <arg name="-flags"/>
        <arg name="mbTT"/>
        <file name="src/analyser-disamb-gt-desc.xfst"/>
      </program>
      <program name="lookup2cg" debug="lookup2cg"/>
      <program name="vislcg3" debug="dis">
        <arg name="-g"/>
        <file name="src/syntax/disambiguator.cg3"/>
      </program>
      <program name="vislcg3" debug="function">
        <arg name="-g"/>
        <file name="../../giella-shared/smi/src/syntax/korp.cg3"/>
      </program>
      <program name="vislcg3" debug="dep">
        <arg name="-g"/>
        <file name="../../giella-shared/smi/src/syntax/dependency.cg3"/>
      </program>
    </pipeline>
  </mode>

  <mode name="hfst">
    <pipeline>
      <program name="hfst-tokenise" debug-suff="morph">
        <arg name="--print-all"/>
        <arg name="--giella-cg"/>
        <file name="tools/tokenisers/tokeniser-disamb-gt-desc.pmhfst"/>
      </program>
      <program name="vislcg3" debug-suff="mwe-dis">
        <arg name="-g"/>
        <file name="tools/tokenisers/mwe-dis.cg3"/>
      </program>
      <program name="cg-mwesplit" debug-suff="mwe-split"/>
      <program name="vislcg3" debug="dis">
        <arg name="-g"/>
        <file name="src/syntax/disambiguator.cg3"/>
      </program>
      <program name="vislcg3" debug="function">
        <arg name="-g"/>
        <file name="../../giella-shared/smi/src/syntax/korp.cg3"/>
      </program>
      <program name="vislcg3" debug="dep">
        <arg name="-g"/>
        <file name="../../giella-shared/smi/src/syntax/dependency.cg3"/>
      </program>
    </pipeline>
  </mode>

  <mode name="trace-smegram" gendebug="yes">
    <pipeline>
      <program name="hfst-tokenise" debug-suff="morph">
        <arg name="--gtd"/>
        <file name="tools/tokenisers/tokeniser-gramcheck-gt-desc.pmhfst"/>
      </program>
      <program name="vislcg3" debug-suff="mwe-dis">
        <arg name="-t"/>
        <arg name="-g"/>
        <file name="tools/tokenisers/mwe-dis.cg3"/>
      </program>
      <program name="cg-mwesplit" debug-suff="mwe-split"/>
      <program name="vislcg3" debug-suff="val">
        <arg name="-g"/>
        <file name="src/syntax/valency.cg3"/>
      </program>
      <program name="vislcg3" debug-suff="disam">
        <arg name="-t"/>
        <arg name="-g"/>
        <file name="tools/grammarcheckers/disambiguator.cg3"/>
      </program>
      <program name="vislcg3" debug-suff="gc">
        <arg name="-t"/>
        <arg name="-g"/>
        <file name="tools/grammarcheckers/grammarchecker.cg3"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tokenise">
    <pipeline>
      <program name="hfst-tokenise" debug-suff="morph">
        <arg name="--segment"/>
        <arg name="--print-all"/>
        <file name="tools/tokenisers/tokeniser-disamb-gt-desc.pmhfst"/>
      </program>
    </pipeline>
  </mode>
</modes>
